<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        
    <com.google.android.material.appbar.AppBarLayout        
    android:id="@+id/appbar"        
    android:layout_width="match_parent"     
    android:fitsSystemWindows="true"   
    android:layout_height="wrap_content">           
        <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent" 
        app:titleCentered="true"
        android:layout_height="?attr/actionBarSize"/>        
    </com.google.android.material.appbar.AppBarLayout>    
       
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@drawable/shape_alone"
            android:orientation="vertical">
        <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:id="@+id/progress_c"
        android:layout_marginBottom="10dp"/>
        <com.google.android.material.progressindicator.LinearProgressIndicator
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginBottom="10dp"
         android:id="@+id/progress_l" />
        </LinearLayout> 
    <!--Switchy for the DeterminateMode-->
    <androidx.core.widget.NestedScrollView
    android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingHorizontal="24dp"
        android:background="@drawable/shape_top"
        android:layout_marginTop="4dp">
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/deter_switch"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Determinate Mode"
                android:checked="true"/>
            <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Circle Indeterminate Animation"/>
                <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.MaterialButtonGroup.Connected"
                app:singleSelection="true"
                android:id="@+id/p_anim"
                app:selectionRequired="true"
                app:checkedButton="@id/progress_anim_advance_button">
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        style="?attr/materialButtonOutlinedStyle"
                        android:id="@+id/progress_anim_advance_button"
                        android:text="Advance"/>
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        style="?attr/materialButtonOutlinedStyle"
                        android:id="@+id/progress_anim_retreat_button"
                        android:text="Retreat"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Progress"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/progress_slider"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            android:stepSize="10.0"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Amplitude"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/amplitude_slider"
            android:valueFrom="0.0"
            android:valueTo="30.0"
            android:stepSize="1.0"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Wave Length"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/wavelength_slider"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            android:stepSize="1.0"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Wave Speed"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/wavespeed_slider"
            android:valueFrom="-50.0"
            android:valueTo="50.0"
            android:value="0.0"
            android:stepSize="1.0"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Circle Indicator Size"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/cindicatorsize_slider"
            android:valueFrom="20.0"
            android:valueTo="200.0"
            android:stepSize="1.0"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Track Thickness"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/trackthick_slider"
            android:valueFrom="1.0"
            android:valueTo="15.0"
            android:stepSize="1.0"/>
    </LinearLayout>
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Corner Radius"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/cornerradius_slider"
            android:valueFrom="0.0"
            android:valueTo="5.0"
            android:stepSize="1.0"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_middle"
    android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Gap Size"/>
        <com.google.android.material.slider.Slider
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/gapsize_slider"
            android:valueFrom="0.0"
            android:valueTo="10.0"
            android:stepSize="1.0"/>
    </LinearLayout>
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/shape_bottom"
    android:layout_marginTop="4dp">
    <TextView
    android:layout_height="85dp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:textSize="16sp"
    android:text="❤️ Made with Love \nBy SyntaxSpin"/>
    </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

    
</androidx.coordinatorlayout.widget.CoordinatorLayout>